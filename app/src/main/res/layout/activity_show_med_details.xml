<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/med_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="inherit"
    tools:context=".showMedDetailsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="459dp"
        android:layout_height="216dp"
        android:src="@drawable/med"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom_med_txt" />

    <TextView
        android:id="@+id/code_fam_txt"
        android:layout_width="600dp"
        android:layout_height="39dp"
        android:layout_gravity="center|right"
        android:background="#FBF7E9"
        android:fontFamily="@font/fresca"
        android:gravity="center|right"
        android:lineSpacingExtra="8sp"
        android:text="AMOX 45"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#3D63AC"
        android:textDirection="firstStrongRtl"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nom_med_txt"
        android:layout_width="600dp"
        android:layout_height="39dp"
        android:layout_gravity="center|right"
        android:layout_marginStart="1dp"
        android:background="#FBF7E9"
        android:gravity="center|right"
        android:text="Doliprane"
        android:textAlignment="center"
        android:textDirection="firstStrongRtl"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_fam_txt" />

    <TextView
        android:id="@+id/med_compo_txt"
        android:layout_width="0dip"
        android:layout_height="39dp"

        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="1dp"
        android:background="#FBF7E9"
        android:gravity="center|right"
        android:text="Doliprane"
        android:textAlignment="center"
        android:textDirection="firstStrongRtl"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/med_effet_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/med_contreindic_text"
        android:layout_width="0dip"
        android:layout_height="69dp"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="1dp"
        android:background="#FBF7E9"
        android:gravity="center|right"
        android:text="Doliprane"
        android:textAlignment="center"
        android:textColor="#AC1F1F"
        android:textDirection="firstStrongRtl"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med_effet_txt" />

    <TextView
        android:id="@+id/med_effet_txt"
        android:layout_width="0dip"
        android:layout_height="65dp"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal|fill"
        android:paddingLeft="13sp"
        android:text="Doliprane"
        android:textAlignment="center"
        android:textDirection="firstStrongRtl"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med_compo_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>