<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".medicamentListActivity">

    <ListView
        android:id="@+id/list_medicaments"
        android:layout_width="610dp"
        android:layout_height="678dp"
        android:layout_marginTop="20dp"
        android:cacheColorHint="#785757"
        app:layout_constraintTop_toBottomOf="@+id/chargement_btn"
        tools:layout_editor_absoluteX="-5dp" />

<Button
    android:id="@+id/chargement_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="@string/chargement"
    app:backgroundTint="#52B7F3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>